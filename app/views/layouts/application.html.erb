<!DOCTYPE html>
<html>
<head>
  <title>Huntapp</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <script type="text/javascript" src="http://maps.google.com/maps/api/js?libraries=geometry&amp;sensor=false"></script>
  <%= csrf_meta_tag %>
</head>
<body class="controller-<%= controller_name %> action-<%= action_name %>">
  <div id="application">
    <div id="header">
      <div class="limiter">
        <h1><a href="/">Track My Hunt</a></h1>
        <ul id="secondary-navigation">
          <%- if current_user? -%>
          <li><%= link_to 'Sign Out', signout_path %></li>
          <!-- <li><%= link_to 'Your Hunts', hunts_path %></li> -->
          <%- else -%>
          <li><%= link_to 'Sign In', signin_path %></li>
          <li><%= link_to 'Sign Up', signup_path %></li>
          <%- end -%>
        </ul>
        <ul id="navigation">
          <li><a href="/">Home</a></li>
          <li><a href="/start-mapping">Start Mapping</a></li>
          <li><a href="/live-hunts">Live Hunts</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/links">Links</a></li>
        </ul>
      </div>
    </div>
    <div id="main">
      <div class="limiter">
        <%= yield %>
      </div>
    </div>
    <div id="footer">
        <div class="limiter">
          Footer
        </div>
    </div>
  </div>

</body>
</html>
